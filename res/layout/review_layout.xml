<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
  <!-- Screen Design for Photos -->

    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="12dp"
        android:textColor="#00FFFF"
        android:textStyle="bold"
        android:text="Tips" />

    <TextView
        android:id="@+id/tipDetail"
        android:layout_width="269dp"
        android:layout_height="112dp"
        android:layout_x="19dp"
        android:layout_y="120dp"
        android:text="You need to review current insurances you take out, such as insurances for a life, a health and a casualty. A bank could help you to look into whether you have appropriate insurance products or amounts according to your life plan." />

    <TextView
        android:id="@+id/recomm"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_x="24dp"
        android:layout_y="326dp"
        android:text="Recommended Bank Product/Service"
        android:textColor="#00FFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recommDetail"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_x="22dp"
        android:layout_y="370dp"
        android:text="Insurance consulting service" />
    
</AbsoluteLayout>
